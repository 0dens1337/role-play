        "/api/npc/{npc}/tag": {
            "post": {
                "tags": [
                    "Add Tags"
                ],
                "summary": "Добавить тег NPC",
                "description": "Добавляет указанный тег к переданному NPC. Возвращает сообщение об успехе или ошибке, если тег уже назначен.",
                "operationId": "ab786a2126f1f6a589dc9f37b29ae91d",
                "parameters": [
                    {
                        "name": "npc",
                        "in": "path",
                        "description": "ID NPC",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 5
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddTagForNpcRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Тег успешно добавлен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Tag added successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Тег уже назначен NPC",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "This npc is already in this tag"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Ошибка валидации"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
