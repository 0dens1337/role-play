    "components": {
        "schemas": {
            "AddTagForNpcRequest": {
                "required": [
                    "tag_id"
                ],
                "properties": {
                    "tag_id": {
                        "description": "ID тега, который нужно добавить NPC",
                        "type": "integer",
                        "example": 12
                    }
                },
                "type": "object"
            },
            "CreateNpcRequest": {
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "John the Blacksmith"
                    },
                    "title": {
                        "type": "string",
                        "example": "Master Artisan"
                    },
                    "description": {
                        "type": "string",
                        "example": "Cool description"
                    },
                    "image": {
                        "description": "Изображение (jpeg, png, jpg, gif, svg)",
                        "type": "string",
                        "format": "binary",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "StrongP@ss123"
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "properties": {
                    "login": {
                        "type": "string",
                        "example": "john_doe_123"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "StrongP@ss123"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "password",
                        "example": "StrongP@ss123"
                    }
                },
                "type": "object"
            },
            "StoreTagRequest": {
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "quest"
                    }
                },
                "type": "object"
            },
            "StoreUserRequest": {
                "required": [
                    "login",
                    "email",
                    "password",
                    "role"
                ],
                "properties": {
                    "login": {
                        "type": "string",
                        "maxLength": 32,
                        "minLength": 3,
                        "pattern": "^[a-zA-Z0-9_-]+$",
                        "example": "john_doe_123"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255,
                        "example": "john@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "minLength": 8,
                        "example": "StrongP@ssw0rd"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "password",
                        "example": "StrongP@ssw0rd"
                    },
                    "avatar": {
                        "description": "Изображение (jpeg, png, jpg, gif, svg)",
                        "type": "string",
                        "format": "binary",
                        "nullable": true
                    },
                    "role": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "UpdateNpcRequest": {
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "John the Blacksmith"
                    },
                    "title": {
                        "type": "string",
                        "example": "Master Artisan"
                    },
                    "description": {
                        "type": "string",
                        "example": "Cool description"
                    },
                    "image": {
                        "description": "Изображение (jpeg, png, jpg, gif, svg)",
                        "type": "string",
                        "format": "binary",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "UpdateTagRequest": {
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "npc"
                    }
                },
                "type": "object"
            },
            "UpdateUserRequest": {
                "properties": {
                    "login": {
                        "type": "string",
                        "maxLength": 32,
                        "minLength": 3,
                        "pattern": "^[a-zA-Z0-9_-]+$",
                        "example": "john_doe_123"
                    },
                    "email": {
                        "type": "string",
